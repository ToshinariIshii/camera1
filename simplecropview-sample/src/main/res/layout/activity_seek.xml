<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simplecropviewsample.SeekBar_Activity"
    android:background="#FFFFFF">

    <TextView
        android:text="TextView"
        android:id="@+id/checkView1"
        android:layout_height="400dp"
        android:background="@drawable/lavel_background"
        android:textSize="18sp"
        android:layout_width="450dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/SeekBar01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="4"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/seekText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/seekText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="24sp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:background="@drawable/text_background"
        android:layout_width="100dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="母乳の摂取量(見た感覚で)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/breastMilkView1"
        android:layout_marginTop="0dp"
        android:textSize="24sp" />

    <TextView
        android:text=" ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:id="@+id/ml"
        android:textSize="24sp"
        android:layout_marginTop="200dp" />

    <TextView
        android:text="約 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yaku"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:layout_marginTop="200dp" />

    <TextView
        android:text="粉ミルクの摂取量(おおよそ)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/milkView1"
        android:textSize="24sp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/SeekBar01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="戻る"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/cancelButton1"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <Button
        android:text="進む"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton1"
        android:layout_alignBaseline="@+id/cancelButton1"
        android:layout_alignBottom="@+id/cancelButton1"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/memo"
        android:layout_alignTop="@+id/checkView1"
        android:layout_alignRight="@+id/checkView1"
        android:layout_alignEnd="@+id/checkView1"
        android:layout_alignLeft="@+id/checkView1"
        android:layout_alignStart="@+id/checkView1"
        android:layout_height="150dp"
        android:background="@drawable/text_background"
        android:layout_above="@+id/saveButton1" />

    <TextView
        android:text="体重(㌘):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/degree"
        android:layout_alignLeft="@+id/degree"
        android:layout_alignStart="@+id/degree"
        android:layout_marginTop="19dp"
        android:id="@+id/weight"
        android:textSize="36sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"


        android:entries="@array/list"
        android:background="@drawable/spinner_background"

        android:layout_alignLeft="@+id/ml"
        android:layout_alignStart="@+id/ml"
        android:layout_above="@+id/milkView1"
        android:layout_alignTop="@+id/seekText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editWeight"
        android:background="@drawable/text_background"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/weight"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2" />

    <TextView
        android:text="体温(℃):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/degree"
        android:textSize="36sp"
        android:layout_alignLeft="@+id/cancelButton1"
        android:layout_alignStart="@+id/cancelButton1"
        android:layout_alignTop="@+id/seekText" />

</RelativeLayout>
